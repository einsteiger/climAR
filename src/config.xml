<?xml version='1.0' encoding='utf-8'?>
<widget id="com.manasesjesus.climar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>climAR</name>
    <description>
        Augmented Reality Weather Mobile App
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Manasés Jesús
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true/>
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false/>
        </config-file>
    </platform>
    <preference name="fullscreen" value="true" />
    <plugin name="com.ezartech.ezar.snapshot" spec="../../../plugins/ezar-startup-kit-0.2.10/plugins/com.ezartech.ezar.snapshot" />
    <plugin name="com.ezartech.ezar.videooverlay" spec="../../../plugins/ezar-startup-kit-0.2.10/plugins/com.ezartech.ezar.videooverlay" />
    <engine name="ios" spec="~4.3.1" />
    <engine name="android" spec="~6.1.2" />
    <plugin name="cordova-custom-config" spec="~3.1.2" />
</widget>
